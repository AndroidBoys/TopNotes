<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <!--<item name="colorPrimary">@color/blueColor</item>-->
        <item name="colorControlHighlight">#628be4</item>
    </style>


    <style
        name="dialog_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

    <!--Action Bar Style-->
    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/navigation_header_color</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/navigation_header_color</item>
    </style>

    <style name="redTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/redColor</item>
        <item name="colorPrimaryDark">@color/lightRedColor</item>
        <item name="colorAccent">@color/redColor2</item>
    </style>

    <style name="purpleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purpleColor</item>
        <item name="colorPrimaryDark">@color/lightPurpleColor</item>
        <item name="colorAccent">@color/purpleColor2</item>
    </style>

    <style name="greenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenColor</item>
        <item name="colorPrimaryDark">@color/lightgreenColor</item>
        <item name="colorAccent">@color/greenColor2</item>
    </style>


</resources>
