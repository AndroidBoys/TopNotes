<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@drawable/navigation_header_color"
              android:layout_height="120dp">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/googleg_standard_color_18"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_weight="3"
        android:background=""
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/notesNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="Operating system"
            android:textColor="@color/blackColor"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/authorsNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author : Arvind Negi"
            android:layout_weight="1"
            android:textColor="@color/whiteColor"
            android:textStyle="italic"
            android:textSize="15dp"/>

        <Button
            android:layout_width="match_parent"
            android:background="@color/blackColor"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/delete_image"/>

            <Button
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/blackColor"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/share_image"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_weight="2"
            android:background="@drawable/rating_image"/>

        <TextView
            android:id="@+id/totalRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.2"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="24dp"
            android:textColor="@color/blackColor"/>

    </LinearLayout>

</LinearLayout>