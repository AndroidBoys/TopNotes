<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_view"
        android:id="@+id/notes"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Notes"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:padding="20dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:drawableStart="@drawable/dialog_fragment_notes"

        />
    <TextView
        android:id="@+id/questionPaper"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Question Papers"
        android:textAlignment="center"
        android:layout_weight="1"
        android:drawableStart="@drawable/dialog_fragment_question"
        />
    <TextView
        android:id="@+id/practicalFiles"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:background="@drawable/curved_view"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textSize="30sp"
        android:text="Practical Files"
        android:textAlignment="center"
        android:layout_weight="1"
        android:drawableStart="@drawable/dialog_fragment_practical"/>

    <TextView
        android:id="@+id/resources"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/curved_view"
        android:padding="20dp"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textSize="30sp"
        android:text="Resources"
        android:textAlignment="center"
        android:layout_weight="1"
        android:drawableStart="@drawable/dialog_fragment_resource"

        />
</LinearLayout>
